
@model SectionLessons

@{
    Layout = "_CourseLayout";
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title"></span>
    </div>

    <div class="form-group">
        <label asp-for="Order"></label>
        <input asp-for="Order" class="form-control" type="number" step="1" required />
        <span asp-validation-for="Order"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Videourl">Video Url</label>
        <input asp-for="Videourl" type="text" class="form-control" />
        <span asp-validation-for="Videourl"></span>
    </div>

    <input asp-for="Id" class="form-control" value="@Model.Id" type="text" hidden />
    <input asp-for="SectionId" class="form-control" value="@Model.SectionId" type="text" hidden />

    <button type="submit" class="btn btn-primary">Add Lesson</button>

    <a asp-area="Admin" asp-controller="Lesson" asp-action="Index" asp-route-Id="@Model.SectionId" class="btn btn-danger">
        Back
    </a>
    <div asp-validation-summary="All" class="text-bg-danger" ></div>
</form>
