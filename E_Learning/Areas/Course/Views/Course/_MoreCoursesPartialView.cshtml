@{
	var count = 3;
}
@using E_Learning.Areas.Home.Models;

@model List<CourseCardDetails>;

<style>
	.related-items .item {
		display: flex;
		flex-direction: column;
		height: 100%; /* Make the cards take full height */
	}

	.item-thumb {
		flex-shrink: 0;
	}

	.item-desc {
		flex-grow: 1; /* Ensure the description grows and fills the space */
		display: flex;
		flex-direction: column;
		justify-content: space-between; /* Push the button to the bottom */
	}

		.item-desc .text-center {
			margin-top: auto; /* Ensure the button is aligned at the bottom */
		}
</style>



<div id="section-more" class="section section-related py-5">
	<div class="container">
		<h3 class="section-title mb-5">More Courses You May Like</h3>
		<div class="related-items row">
			@for (int i = 0; i < count; i++)
			{
				@if (@Model[i].Id != ViewBag.ViewdCourseId)
				{
					<div class="col-12 col-lg-4 mb-4 mb-lg-0">
						<div class="item">
							<div class="item-thumb">
								<img class="img-fluid rounded-top" src="~/images/Courses/@Model[i].Image" alt="@Model[i].Title" width="300px" height="300px">
							</div><!--//thumb-holder-->
							<div class="item-desc p-4 rounded-bottom">
								<h4 class="title mb-3">
									<a href="@Model[i].Id">@Model[i].Title</a>
								</h4>
								<div class="summary mb-3">
									@Model[i].Summary
								</div>
								<div class="text-center">
									<a class="btn btn-ghost btn-block" href="@Model[i].Id">Find out more</a>
								</div>
							</div><!--//desc-->
					</div><!--//item-->
				</div><!--//col-->
				}
				else
				{
					count++;
				}		}
		</div><!--//row-->
	</div><!--//container-->
</div><!--//section-8-->
