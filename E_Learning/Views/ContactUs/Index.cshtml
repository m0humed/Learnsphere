    <div class="row">
    <h1 class="text-center" style="font-family:'Times New Roman', Times, serif;">Contact Us</h1>
    </div>

    <div class="text-center" style="margin-top:30px">
        <a href="@(Url.Action("Create", "ContactUs"))" type="button" class="btn btn-primary " style="font-family:'Times New Roman', Times, serif;">Send us a message </a>
    </div>
</div>



